@page "/Account/Manage/PersonalData"

@inject UserManager<ApplicationUser> UserManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Dane osobowe</PageTitle>

<StatusMessage />
<h3>Dane osobowe</h3>

<div class="row">
    <div class="col-md-6">
        <p>
            <strong>Usunięcie swoich danych osobowych spowoduje nieodwracalne usunięcie konta.</strong>
        </p>
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <button class="btn btn-primary mb-1" type="submit">Pobierz</button>
        </form>
        <p>
            <a href="Account/Manage/DeletePersonalData" class="btn btn-danger">Usuń</a>
        </p>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var user  = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
            return;
        }
    }
}
